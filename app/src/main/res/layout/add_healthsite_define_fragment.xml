<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/healthsite_definition"
        android:textSize="30sp"
        android:textColor="@color/colorGreenDark"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/add_healthsite_properties_title"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/add_healthsite_properties_title">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/is_a_place_where_i_can_buy_food_and_or_drinks"
                android:layout_marginBottom="10dp">

            </androidx.appcompat.widget.AppCompatTextView>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/store"
                android:textSize="20sp"
                android:buttonTint="@color/colorGreenDark"
                android:layout_marginLeft="15dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/is_a_place_where_i_can_eat"
                android:textSize="16sp"
                android:layout_marginBottom="10dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/check_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_food_service"
                android:textSize="20sp"
                android:buttonTint="@color/colorGreenDark"
                android:layout_marginLeft="15dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next_add_healhtsite_define"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="top"
        android:textAllCaps="false"
        android:enabled="false"
        android:alpha="0.3"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/properties"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_healthsite_properties_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_categories_will_help_us_to_categorize_nthe_site_according_its_services"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next_add_healhtsite_define"/>

</androidx.constraintlayout.widget.ConstraintLayout>